<link rel="stylesheet" href="/css/result.css">
<nav>
    <a href="/student/interview_list">Interview List</a>
</nav>
<section>
    <h1>Result Update:</h1>
    <div>
        <table>
            <tr>
                <th>CompanyName</th>
                <th>StudentName</th>
                <th>Email</th>
                <th>Result</th>
            </tr>
            <tr>

                <% for(var i=0 ; i<companyResult.students.length ; i++ ) { %>
                    <td>
                        <%= companyResult.companyName %>
                    </td>
                    <td>
                        <%= companyResult.students[i].name %>
                    </td>
                    <td>
                        <%= companyResult.students[i].email %>
                    </td>
                    <td>
                        <% if(companyResult.result.indexOf(companyResult.students[i].id)==-1) { %>
                            <form action="/result/update" method="POST">
                                <!-- <input type="text" name="result" placeholder="Update Result" required="true"> -->
                                <input type="hidden" name="interviewId" value="<%= companyResult.id %>">
                                <input type="hidden" name="studentId" value="<%= companyResult.students[i].id %>">
                                <select name="result">
                                    <option name="PASS" value="PASS">PASS</option>
                                    <option name="FAIL" value="FAIL">FAIL</option>
                                    <option name="On Hold" value="On Hold">On Hold</option>
                                    <option name="Didnot Attemp" value="Didnot Attemp">NotAttempted</option>
                                </select>
                                <button>Update</button>
                            </form>
                            <%}else{ %>
                                <button>I am done !</button>
                                <%}%>
                    </td>
            </tr>
            <% } %>
        </table>
    </div>
</section>